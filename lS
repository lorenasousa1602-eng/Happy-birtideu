  <script>
    // Simple personalization
    const name = '';// coloca aqui o nome, ex: 'Georgia'
    if(name){
      document.getElementById('namePlace').textContent = 'Para: ' + name;
      document.getElementById('title').textContent = 'Feliz AniversÃ¡rio, ' + name + '!';
    }

    // Blow out candles
    const blowBtn = document.getElementById('blowBtn');
    let blown = false;
    blowBtn.addEventListener('click', ()=>{
      if(blown) return;
      blown = true;
      // remove flames
      document.querySelectorAll('.flame').forEach(f => {
        f.style.transition = 'opacity .9s ease';
        f.style.opacity = '0';
      });
      blowBtn.textContent = 'Pedido feito! ðŸŽ‰';
      spawnConfetti();
    });

    // Confetti generator (small)
    function spawnConfetti(){
      const wrap = document.getElementById('confetti');
      const colors = ['#ffd166','#ff7eb3','#8ec5ff','#7ef3b4','#a78bfa'];
      for(let i=0;i<28;i++){
        const el = document.createElement('i');
        el.style.left = Math.random()*100 + '%';
        el.style.top = (Math.random()*30 - 10) + '%';
        el.style.width = (6+Math.random()*10)+'px';
        el.style.height = el.style.width;
        el.style.background = colors[Math.floor(Math.random()*colors.length)];
        el.style.animationDuration = (2.5 + Math.random()*2)+'s';
        el.style.transform = 'rotate('+ (Math.random()*360) +'deg)';
        wrap.appendChild(el);
        setTimeout(()=>el.remove(), 4500);
      }
    }
  </script>
